@{
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Game List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Game" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Add New Game
            </a>
        </div>
    </div>
    <br /><br />

    <table class="table tabled-bordered table-striped" style="width: 100%">
        <thead>
            <tr>
                <th width="20%">
                    ID
                </th>
                <th>
                    Game Name
                </th>
                <th>
                    Game Description
                </th>
                <th>
                    Game Price
                </th>
                <th>

                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.Games)
            {
                <tr>
                    <td width="15%">
                        @obj.Id
                    </td>
                    <td width="15%">
                        @obj.gameName
                    </td>
                    <td width="15%">
                        @obj.gameDescription
                    </td>
                    <td width="15%">
                        @obj.gamePrice
                    </td>

                    <td>
                        <div class="w-50 btn-group d-inline" role="group">
                            <a asp-controller="Game" asp-action="Edit" asp-route-gameId="@obj.Id"
                               class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i>Edit
                            </a>
                        </div>
                        <div class="w-50 btn-group d-inline" role="group">
                            <a asp-controller="Game" asp-action="Delete" asp-route-gameId="@obj.Id"
                               class="btn btn-danger mx-2">
                                <i class="bi bi-trash-fill"></i>Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
